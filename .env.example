# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/vizu?schema=public"

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# REDIS (Upstash recommended for serverless)
# ===========================================
REDIS_URL="redis://localhost:6379"
# Or for Upstash:
# UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# ===========================================
# CLOUDINARY (Image hosting & CDN)
# ===========================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_UPLOAD_PRESET="vizu-uploads"

# ===========================================
# AWS REKOGNITION (Image moderation)
# ===========================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# ===========================================
# PAYMENTS
# ===========================================
# Abacate Pay (Pix)
ABACATE_API_KEY="your-abacate-api-key"
ABACATE_WEBHOOK_SECRET="your-webhook-secret"

# Checkout transparente (a definir)
# CHECKOUT_API_KEY="your-api-key"
# CHECKOUT_WEBHOOK_SECRET="your-webhook-secret"

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Vizu"

# Dev credentials (optional, for local development only)
# DEV_USER_EMAIL="dev@vizu.local"
# DEV_USER_PASSWORD="dev123"

# Karma settings
KARMA_REGEN_PER_HOUR=1
KARMA_MAX=50
KARMA_INITIAL=50
KARMA_PER_VOTE=3
KARMA_PER_FREE_TEST=10

# Credits settings
CREDITS_PER_PAID_TEST=5
